<% include partials/header.ejs %>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <h1><%= title %></h1>
        <br>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">firstName</th>
                    <th class="text-center">lastName</th>
                    <th class="text-center">email</th>
                    <th>Size</th>
                    <th class="text-center">Tags</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < UserList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= UserList[count].item %></td>
                        <td class="text-center"><%= UserList[count].qty %></td>
                        <td class="text-center"><%= UserList[count].status %></td>
                        <td>
                            Hight: <%= UserList[count].size.h %><br/>
                            Width: <%= UserList[count].size.w %><br/>
                            UOM: <%= UserList[count].size.uom %><br/>
                        </td>
                        <td class="text-center"><%= UserList[count].tags %></td>
                        <td class="text-center">
                            <a href="/inventory/edit/<%= UserList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= UserList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
<% include partials/footer.ejs %>